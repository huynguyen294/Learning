<div class="mt-5">
    <div class="row">
        {{#if course}}
            <div class="col-sm-12 col-lg-9">
                <h1>{{course.name}}</h1>
                <p>{{course.description}}</p>
            </div>
            <div class="col-sm-0 col-lg-3">
                <iframe class="w-100 rounded" width="560" height="315" src="https://www.youtube.com/embed/{{course.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <div class="btn btn-primary mt-2">Mua khóa học</div>
            </div>
        {{/if}}
    </div>
</div>