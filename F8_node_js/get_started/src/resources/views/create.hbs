<div class="container mt-5">
    <h3>Đănh khóa học</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group mt-2">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>

        <div class="form-group mt-2">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
        </div>

        <div class="form-group mt-2">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Enter description">
        </div>

        <div class="form-group mt-2">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Enter description">
        </div>

        <button type="submit" class="btn btn-primary mt-2">Thêm khóa học</button>
    </form>
</div>